<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rajibroy.technovotest">

    <application
        android:name=".application.NovoTest"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security"
        android:theme="@style/Theme.TechnovoTest">
        <activity android:name=".details.DetailsActivity"></activity>
        <activity
            android:name=".home.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TechnovoTest.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>